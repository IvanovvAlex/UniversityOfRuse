@model BuildingManagement.Common.Payments.PaymentDto
@{
    ViewData["Title"] = "Delete Payment";
}

<h1 class="mb-3 text-danger">Delete Payment</h1>
<p>Are you sure you want to delete this payment?</p>

<dl class="row">
    <dt class="col-sm-2">Resident Id</dt>
    <dd class="col-sm-10">@Model.ResidentId</dd>
    <dt class="col-sm-2">Fee Type Id</dt>
    <dd class="col-sm-10">@Model.FeeTypeId</dd>
    <dt class="col-sm-2">Amount</dt>
    <dd class="col-sm-10">@Model.Amount</dd>
    <dt class="col-sm-2">Payment Date</dt>
    <dd class="col-sm-10">@Model.PaymentDate.ToShortDateString()</dd>
    <dt class="col-sm-2">Month For</dt>
    <dd class="col-sm-10">@Model.MonthFor</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>


