@model BuildingManagement.Web.Models.Payments.PaymentFormViewModel
@{
    ViewData["Title"] = "Редактирай плащане";
}

<div class="card shadow-sm border-0">
    <div class="card-header">
        <h1 class="h4 mb-0">
            <i class="bi bi-pencil-square me-2"></i>Редактирай плащане
        </h1>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Payment.Id" />
            <div class="mb-3">
                <label asp-for="Payment.ResidentId" class="form-label">ID на жител <span class="text-danger">*</span></label>
                <input asp-for="Payment.ResidentId" class="form-control" />
                <span asp-validation-for="Payment.ResidentId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Payment.FeeTypeId" class="form-label">Тип такса <span class="text-danger">*</span></label>
                <select asp-for="Payment.FeeTypeId" asp-items="Model.FeeTypes" class="form-select">
                    <option value="">-- Изберете тип такса --</option>
                </select>
                <span asp-validation-for="Payment.FeeTypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Payment.Amount" class="form-label">Сума (лв.) <span class="text-danger">*</span></label>
                <input asp-for="Payment.Amount" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Payment.Amount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Payment.PaymentDate" class="form-label">Дата на плащане <span class="text-danger">*</span></label>
                <input asp-for="Payment.PaymentDate" class="form-control" type="date" />
                <span asp-validation-for="Payment.PaymentDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Payment.MonthFor" class="form-label">Месец за <span class="text-danger">*</span></label>
                <input asp-for="Payment.MonthFor" class="form-control" type="month" />
                <span asp-validation-for="Payment.MonthFor" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>Запази промените
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i>Отказ
                </a>
            </div>
        </form>
    </div>
</div>


