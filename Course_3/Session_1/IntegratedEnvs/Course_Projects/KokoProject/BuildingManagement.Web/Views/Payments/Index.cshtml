@model IEnumerable<BuildingManagement.Common.Payments.PaymentDto>
@{
    ViewData["Title"] = "Плащания";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">
            <i class="bi bi-cash-stack me-2 text-warning"></i>Плащания
        </h1>
        <p class="text-muted mb-0">Списък на всички плащания в системата.</p>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
            <i class="bi bi-cash-stack text-muted" style="font-size: 3rem;"></i>
            <p class="text-muted mt-3 mb-0">Няма налични плащания.</p>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ID Жител</th>
                        <th>ID Тип такса</th>
                        <th>Сума (лв.)</th>
                        <th>Дата на плащане</th>
                        <th>Месец за</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td><span class="badge bg-secondary">@payment.Id</span></td>
                        <td><span class="badge bg-info">@payment.ResidentId</span></td>
                        <td><span class="badge bg-primary">@payment.FeeTypeId</span></td>
                        <td><strong class="text-success">@payment.Amount.ToString("F2") лв.</strong></td>
                        <td>@payment.PaymentDate.ToString("dd.MM.yyyy")</td>
                        <td>@payment.MonthFor</td>
                        <td class="text-end text-nowrap">
                            <a asp-action="Edit" asp-route-id="@payment.Id" 
                               class="btn btn-sm btn-outline-primary me-1" title="Редактирай">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@payment.Id" 
                               class="btn btn-sm btn-outline-danger" title="Изтрий">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
