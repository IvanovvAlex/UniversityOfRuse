@model IEnumerable<BuildingManagement.Common.Residents.ResidentDto>
@{
    ViewData["Title"] = "Жители";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">
            <i class="bi bi-people me-2 text-info"></i>Жители
        </h1>
        <p class="text-muted mb-0">Списък на всички жители в системата.</p>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
            <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
            <p class="text-muted mt-3 mb-0">Няма налични жители.</p>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ID Апартамент</th>
                        <th>Пълно име</th>
                        <th>Телефон</th>
                        <th>Имейл</th>
                        <th>Собственик</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var resident in Model)
                {
                    <tr>
                        <td><span class="badge bg-secondary">@resident.Id</span></td>
                        <td><span class="badge bg-info">@resident.ApartmentId</span></td>
                        <td><strong>@resident.FullName</strong></td>
                        <td>@resident.Phone</td>
                        <td>@(resident.Email ?? "-")</td>
                        <td>
                            @if (resident.IsOwner)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Да
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Не
                                </span>
                            }
                        </td>
                        <td class="text-end text-nowrap">
                            <a asp-controller="Payments" asp-action="Create" asp-route-residentId="@resident.Id" 
                               class="btn btn-sm btn-success me-1" title="Добави плащане">
                                <i class="bi bi-cash-coin"></i> Плащане
                            </a>
                            <a asp-action="Edit" asp-route-id="@resident.Id" 
                               class="btn btn-sm btn-outline-primary me-1" title="Редактирай">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@resident.Id" 
                               class="btn btn-sm btn-outline-danger" title="Изтрий">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
