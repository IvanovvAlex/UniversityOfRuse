@model BuildingManagement.Common.Residents.ResidentDto
@{
    ViewData["Title"] = "Delete Resident";
}

<h1 class="mb-3 text-danger">Delete Resident</h1>
<p>Are you sure you want to delete this resident?</p>

<dl class="row">
    <dt class="col-sm-2">Full Name</dt>
    <dd class="col-sm-10">@Model.FullName</dd>
    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Phone</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Owner</dt>
    <dd class="col-sm-10">@Model.IsOwner</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>


