@model BuildingManagement.Common.Residents.ResidentDto
@{
    ViewData["Title"] = "Добави жител";
}

<div class="card shadow-sm border-0">
    <div class="card-header">
        <h1 class="h4 mb-0">
            <i class="bi bi-person-plus me-2"></i>Добави нов жител
        </h1>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="ApartmentId" class="form-label">ID на апартамент</label>
                <input asp-for="ApartmentId" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Пълно име <span class="text-danger">*</span></label>
                <input asp-for="FullName" class="form-control" placeholder="Например: Иван Петров" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Телефон <span class="text-danger">*</span></label>
                <input asp-for="Phone" class="form-control" placeholder="Например: 0888123456" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Имейл</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Например: ivan@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check form-switch">
                <input asp-for="IsOwner" class="form-check-input" type="checkbox" />
                <label asp-for="IsOwner" class="form-check-label">
                    Собственик на апартамента
                </label>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>Запази
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i>Отказ
                </a>
            </div>
        </form>
    </div>
</div>


