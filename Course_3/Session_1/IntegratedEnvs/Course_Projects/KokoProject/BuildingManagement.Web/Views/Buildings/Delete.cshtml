@model BuildingManagement.Common.Buildings.BuildingDto
@{
    ViewData["Title"] = "Delete Building";
}

<h1 class="mb-3 text-danger">Delete Building</h1>
<p>Are you sure you want to delete this building?</p>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Address</dd>
    <dt class="col-sm-2">Entrance</dt>
    <dd class="col-sm-10">@Model.Entrance</dd>
    <dt class="col-sm-2">Notes</dt>
    <dd class="col-sm-10">@Model.Notes</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>


