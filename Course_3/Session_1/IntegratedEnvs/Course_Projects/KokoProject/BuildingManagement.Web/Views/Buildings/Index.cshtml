@model IEnumerable<BuildingManagement.Common.Buildings.BuildingDto>
@{
    ViewData["Title"] = "Сгради";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">
            <i class="bi bi-building me-2 text-primary"></i>Сгради
        </h1>
        <p class="text-muted mb-0">Списък на всички сгради в системата.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Добави сграда
    </a>
</div>

@if (!Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
            <i class="bi bi-building text-muted" style="font-size: 3rem;"></i>
            <p class="text-muted mt-3 mb-0">Няма налични сгради.</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle me-1"></i>Добави първа сграда
            </a>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Име</th>
                        <th>Адрес</th>
                        <th>Вход</th>
                        <th>Бележки</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var building in Model)
                {
                    <tr>
                        <td><span class="badge bg-secondary">@building.Id</span></td>
                        <td><strong>@building.Name</strong></td>
                        <td>@building.Address</td>
                        <td>@(building.Entrance?.ToString() ?? "-")</td>
                        <td>@(building.Notes ?? "-")</td>
                        <td class="text-end text-nowrap">
                            <a asp-controller="Apartments" asp-action="Create" asp-route-buildingId="@building.Id" 
                               class="btn btn-sm btn-success me-1" title="Добави апартамент">
                                <i class="bi bi-house-add"></i> Апартамент
                            </a>
                            <a asp-action="Edit" asp-route-id="@building.Id" 
                               class="btn btn-sm btn-outline-primary me-1" title="Редактирай">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@building.Id" 
                               class="btn btn-sm btn-outline-danger" title="Изтрий">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}



