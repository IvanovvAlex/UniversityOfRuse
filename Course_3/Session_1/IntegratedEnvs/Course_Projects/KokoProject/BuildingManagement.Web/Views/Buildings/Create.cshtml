@model BuildingManagement.Common.Buildings.BuildingDto
@{
    ViewData["Title"] = "Добави сграда";
}

<div class="card shadow-sm border-0">
    <div class="card-header">
        <h1 class="h4 mb-0">
            <i class="bi bi-building-add me-2"></i>Добави нова сграда
        </h1>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Име на сградата <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="Например: Сграда 'Централ'" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="form-label">Адрес <span class="text-danger">*</span></label>
                <input asp-for="Address" class="form-control" placeholder="Например: ул. Главна 1" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Entrance" class="form-label">Вход</label>
                <input asp-for="Entrance" type="number" class="form-control" placeholder="Опционално" />
                <span asp-validation-for="Entrance" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Бележки</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Допълнителна информация..."></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>Запази
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i>Отказ
                </a>
            </div>
        </form>
    </div>
</div>


