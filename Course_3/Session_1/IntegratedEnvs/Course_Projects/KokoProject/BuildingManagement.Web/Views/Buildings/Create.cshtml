@model BuildingManagement.Common.Buildings.BuildingDto
@{
    ViewData["Title"] = "Add Building";
}

<h1 class="mb-3">Add Building</h1>

<form asp-action="Create" method="post" class="card shadow-sm p-3">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Entrance" class="form-label"></label>
        <input asp-for="Entrance" class="form-control" />
        <span asp-validation-for="Entrance" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>


