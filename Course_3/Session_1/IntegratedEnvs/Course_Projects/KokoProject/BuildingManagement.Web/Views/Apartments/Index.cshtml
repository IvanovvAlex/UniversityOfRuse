@model IEnumerable<BuildingManagement.Common.Apartments.ApartmentDto>
@{
    ViewData["Title"] = "Апартаменти";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-2">
            <i class="bi bi-house-door me-2 text-success"></i>Апартаменти
        </h1>
        <p class="text-muted mb-0">Списък на всички апартаменти в системата.</p>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
            <i class="bi bi-house-door text-muted" style="font-size: 3rem;"></i>
            <p class="text-muted mt-3 mb-0">Няма налични апартаменти.</p>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ID Сграда</th>
                        <th>Номер</th>
                        <th>Етаж</th>
                        <th>Площ (м²)</th>
                        <th>Бележки</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var apartment in Model)
                {
                    <tr>
                        <td><span class="badge bg-secondary">@apartment.Id</span></td>
                        <td><span class="badge bg-info">@apartment.BuildingId</span></td>
                        <td><strong>@apartment.ApartmentNumber</strong></td>
                        <td>@apartment.Floor</td>
                        <td>@(apartment.Area?.ToString("F2") ?? "-")</td>
                        <td>@(apartment.Notes ?? "-")</td>
                        <td class="text-end text-nowrap">
                            <a asp-controller="Residents" asp-action="Create" asp-route-apartmentId="@apartment.Id" 
                               class="btn btn-sm btn-success me-1" title="Добави жител">
                                <i class="bi bi-person-plus"></i> Жител
                            </a>
                            <a asp-action="Edit" asp-route-id="@apartment.Id" 
                               class="btn btn-sm btn-outline-primary me-1" title="Редактирай">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@apartment.Id" 
                               class="btn btn-sm btn-outline-danger" title="Изтрий">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}

