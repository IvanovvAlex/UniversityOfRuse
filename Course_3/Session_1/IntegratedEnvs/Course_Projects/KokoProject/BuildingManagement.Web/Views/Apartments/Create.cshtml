@model BuildingManagement.Common.Apartments.ApartmentDto
@{
    ViewData["Title"] = "Добави апартамент";
}

<div class="card shadow-sm border-0">
    <div class="card-header">
        <h1 class="h4 mb-0">
            <i class="bi bi-house-add me-2"></i>Добави нов апартамент
        </h1>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="BuildingId" class="form-label">ID на сграда</label>
                <input asp-for="BuildingId" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="ApartmentNumber" class="form-label">Номер на апартамент <span class="text-danger">*</span></label>
                <input asp-for="ApartmentNumber" class="form-control" placeholder="Например: 5, 12, 25" />
                <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Floor" class="form-label">Етаж <span class="text-danger">*</span></label>
                <input asp-for="Floor" type="number" class="form-control" placeholder="Например: 1, 2, 3" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Area" class="form-label">Площ (м²)</label>
                <input asp-for="Area" type="number" step="0.01" class="form-control" placeholder="Например: 65.50" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Бележки</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Допълнителна информация..."></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>Запази
                </button>
                <a asp-controller="Buildings" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Назад към сгради
                </a>
            </div>
        </form>
    </div>
</div>


